<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AssistToPurchase.Resources">


    <Style TargetType="CheckBox" x:Key="CheckBoxTemplate">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Content" Value="Selected this option" ></Setter>
                <Setter Property="Foreground" Value="Green"></Setter>
            </Trigger>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="Content" Value="Not selected this option" ></Setter>
                <Setter Property="Foreground" Value="Red"></Setter>
            </Trigger>

        </Style.Triggers>
    </Style>
    
</ResourceDictionary>